{
  "name": "bpa",
  "author": "Nino Majder",
  "version": "",
  "description": "Example of fully a11y PWA Next.js SSR auth.",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "dev": "next dev",
    "now-dev": "now dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck-app": "tsc --project",
    "prettier-check": "prettier --single-quote --trailing-comma all --check '{src,__{tests,mocks}__}/**/*.{ts,tsx,json}'",
    "prettier-write": "prettier --single-quote --trailing-comma all --write '{src,__{tests,mocks}__}/**/*.{ts,tsx,json}'",
    "test-e2e": "cypress open",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "@reach/skip-nav": "^0.1.3",
    "cookie": "^0.4.0",
    "firebase": "^6.3.3",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^11.1.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "serverless-google-cloudfunctions": "^2.3.2",
    "styled-components": "^4.3.2",
    "styled-normalize": "^8.0.6"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-knobs": "^5.1.10",
    "@storybook/addon-links": "^5.1.10",
    "@storybook/addons": "^5.1.10",
    "@storybook/react": "^5.1.10",
    "@testing-library/cypress": "^4.0.4",
    "@testing-library/react": "^8.0.4",
    "@types/jest": "^24.0.15",
    "@types/next": "^8.0.6",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "5.2.0",
    "cypress": "^3.4.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "faker": "^4.1.0",
    "firebase-admin": "^8.3.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "next-workbox-webpack-plugin": "^1.1.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3",
    "webpack-pwa-manifest": "^4.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint-app --",
      "npm run prettier-check --"
    ],
    "src/**/*.{json,css,md}": [
      "prettier-check"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && CI=true npm run test"
    }
  },
  "main": "index.js",
  "license": "MIT"
}
